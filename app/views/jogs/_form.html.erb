<%= form_for(@jog) do |f| %>
  <% if @jog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@jog.errors.count, "error") %> prohibited this jog from being saved:</h2>

      <ul>
      <% @jog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="field">
    <%= f.label :jogged_at, "Date:" %>
    <%= f.text_field :jogged_at_string, :value => Date.today.strftime("%-m/%-d/%Y"), :size => '11' %>
    click/tap to change
  </div>
  <div class="field">
    <%= f.label :miles, "Distance:" %>
    <%= f.text_field :miles, :size => '8' %>
    <%= current_user.distance_unit %>
  </div>
  <div class="field">
    <%= f.label :seconds, "Time:" %>
    <%= f.text_field :display_time, :size => '8' %>
    hh:mm:ss
  </div>
  <div class="field">
    <%= f.label :notes, "Notes:" %><br />
    <%= f.text_area :notes, :rows => "5", :cols => "40" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
