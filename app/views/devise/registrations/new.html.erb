<div class="row">
  <div class="span6 offset3 main-content">
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :email, 'Email:' %><%= f.email_field :email %>

      <%= f.label :password, 'Password:' %><%= f.password_field :password %>

      <%= f.label :password_confirmation, 'Confirm password:' %><%= f.password_field :password_confirmation %>

      <%= f.label :distance_unit, 'Distance measurement?' %><%= f.select :distance_unit, %w[miles kms] %>

      <%= f.label :location, 'Location (optional):' %><%= f.text_field :location %>
      <br />
      <%= link_to "Cancel", root_url, class: 'secondary radius button' %>&nbsp;&nbsp;<%= f.submit "Sign up", class: "secondary success button" %>
    <% end %>

    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  </div><!-- span6 offset3 -->
</div><!-- /row -->