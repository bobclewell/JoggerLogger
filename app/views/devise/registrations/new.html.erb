<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email, 'Email:' %><%= f.email_field :email %>

  <%= f.label :password, 'Password:' %><%= f.password_field :password %>

  <%= f.label :password_confirmation, 'Confirm password:' %><%= f.password_field :password_confirmation %>

  <%= f.label :distance_unit, 'How would you like to measure your distance?' %><%= f.select :distance_unit, %w[miles kms] %>

  <%= f.label :location, 'Location (optional):' %><%= f.text_field :location %>
  <br />
  <%= f.submit "Sign up", :class => "btn btn-success" %>
<% end %>

<%= render "links" %>
