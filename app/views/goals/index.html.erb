Goal (<%= @current_goal.name %>): <%= goal_statement(current_user) %>
<br />
<br />

<%= link_to 'New Goal', new_goal_path %>

<h2>Goal History</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Goal type</th>
    <th>Time</th>
    <th>Miles</th>
    <th></th>
  </tr>

<% @historic_goals.each do |goal| %>
  <tr>
    <td><%= goal.name %></td>
    <td><%= goal.goal_type %></td>
    <td><%= goal.time %></td>
    <td><%= goal.miles %></td>
    <td><%= link_to 'Delete', goal, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>